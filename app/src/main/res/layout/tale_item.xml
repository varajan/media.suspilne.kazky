<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_weight = "0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@mipmap/t001" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/photo"
            android:layout_alignBottom="@+id/photo"
            android:layout_marginEnd="0dp"
            app:srcCompat="@mipmap/tale_play"
            tools:scaleType="fitXY" />

        <ImageView
            android:id="@+id/downloaded"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/photo"
            android:layout_alignTop="@+id/photo"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_saved"
            tools:scaleType="fitXY" />

        <TextView
            app:fontFamily="@font/chalkboard"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/title"
            android:textColor="@color/colorAccent"
            android:shadowColor="@color/superLight"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:textSize="10pt"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="8dp"
            android:text="@string/reader"
            android:textColor="@color/colorAccent"
            android:shadowColor="@color/superLight"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="2"
            android:textSize="10pt"
            app:fontFamily="@font/chalkboard"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/photo"
            android:layout_alignBottom="@+id/photo"
            app:srcCompat="@drawable/ic_favorite" />
    </RelativeLayout>

</LinearLayout>